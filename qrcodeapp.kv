<Label>:
    color: 0.1, 0.1, 0.1, 1  # Темный текст

<TextInput>:
    background_color: 0.95, 0.95, 0.95, 1  # Светло-серый фон
    foreground_color: 0.1, 0.1, 0.1, 1  # Темный текст
    cursor_color: 0.2, 0.6, 0.8, 1  # Голубой курсор
    padding: 10
    font_size: 18

<Button>:
    background_normal: ''
    background_color: 0.2, 0.6, 0.8, 1  # Голубой фон кнопки
    color: 1, 1, 1, 1  # Белый текст
    font_size: 18
    bold: True
    canvas.before:
        Color:
            rgba: 0.15, 0.55, 0.75, 0.5  # Тень кнопки
        Rectangle:
            pos: self.pos[0] + 2, self.pos[1] - 2
            size: self.size
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
    on_press:
        self.background_color = 0.1, 0.5, 0.7, 1  # Темнее при нажатии
    on_release:
        self.background_color = 0.2, 0.6, 0.8, 1  # Возврат цвета

<Image>:
    source: 'placeholder.png'  # Заглушка для изображения
    allow_stretch: True
    keep_ratio: True
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Белый фон для изображения
        Rectangle:
            pos: self.pos
            size: self.size

<Popup>:
    background_color: 0.9, 0.9, 0.9, 1  # Светлый фон попапа
    title_color: 0.1, 0.1, 0.1, 1  # Темный текст заголовка
    separator_color: 0.2, 0.6, 0.8, 1  # Голубая разделительная линия